{
  "manifest_version": 3,
  "name": "LeaseCalc Extension",
  "version": "0.0.1",
  "description": "Chrome Extension for LeaseCalc - Property lease calculations made easy",
  "permissions": [],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
